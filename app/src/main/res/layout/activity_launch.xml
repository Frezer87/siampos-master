<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_launch"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chengen.siamclassic.ActivityLaunch"
    android:background="#d8b177"
    android:padding="16dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/siam_logo"
        android:id="@+id/imageView"
        android:layout_marginTop="34dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="18sp"
        />

    <TextView
        android:text="Sign In"
        android:layout_width="match_parent"
        android:id="@+id/tv_launch_sign_in"
        android:layout_marginTop="1dp"
        android:background="@drawable/customer_button_effect"
        android:layout_height="55dp"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:layout_gravity="center" />

    <TextView
        android:text="Register"
        android:layout_width="match_parent"
        android:id="@+id/tv_launch_sign_up"
        android:background="@drawable/employee_button_effect"
        android:layout_marginTop="8dp"
        android:layout_height="40dp"
        android:textSize="24sp"
        android:textColor="@color/bg_gray"
        android:gravity="center" />

    <com.facebook.login.widget.LoginButton
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:id="@+id/login_button"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="9dp" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/signInButton"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <TextView
        android:text="Skip >"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_launch_skip"
        android:layout_marginTop="10dp"
        android:layout_gravity="end"
        android:textSize="20sp"
        android:layout_marginEnd="20dp"
        android:textColor="@drawable/blue_text_effect" />

</LinearLayout>
